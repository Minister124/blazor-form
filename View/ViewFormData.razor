@page "/formData"
@using IronPdf

<h3>ViewFormData</h3>
<button class="btn btn-primary" @onclick="DownloadDataAsync">Download</button>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var formData in FormData.RetrieveFormData(JSRuntime))
        {
            <tr>
                <td>@formData.FirstName</td>
                <td>@formData.LastName</td>
                <td>@formData.Email</td>
                <td>@formData.PhoneNumber</td>
                <td>@formData.Address</td>
            </tr>
        }
    </tbody>
</table>
@code {
    public async Task DownloadDataAsync()
    {
        try
        {
            var formDataList = Forms.Data.Services.FormData.RetrieveFormData(JSRuntime);

            if (formDataList != null && formDataList.Any())
            {
                // Create a PDF document
                var pdf = new IronPdf.HtmlToPdf();

                // Add table with headers
                var tableHtml = "<table><thead><tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Phone Number</th><th>Address</th></tr></thead><tbody>";

                // Add data to the table
                foreach (var formData in formDataList)
                {
                    tableHtml += $"<tr><td>{formData.FirstName}</td><td>{formData.LastName}</td><td>{formData.Email}</td><td>{formData.PhoneNumber}</td><td>{formData.Address}</td></tr>";
                }

                tableHtml += "</tbody></table>";

                //Convert HTML to Pdf
                var renderer = new ChromePdfRenderer();
                var pdfStream = pdf.RenderHtmlAsPdf(tableHtml).Stream;

                // Save the PDF to a file
                string pdfPath = @"C:\Users\kusha\Desktop\IIC\Application Development\Self\Database\Pdfs";

                using (var fileStream = new System.IO.FileStream(Path.Combine(pdfPath, "FormData.pdf"), System.IO.FileMode.Create))
                {
                    await pdfStream.CopyToAsync(fileStream);
                }

                // Show notification
                await JSRuntime.InvokeVoidAsync("alert", "File downloaded successfully!");
            }
        }catch(Exception ex)
        {
            Console.WriteLine(ex);
        }
    }
}